Program Lab2;

Uses
    System.SysUtils;

Const
    ONEKILOCOST = 280;
    TABLESTEP = 50;
    ENDOFTABLE = 1000;
    GRAMINKILO = 1000;

Var
    I: Integer; 
    Cost: Integer = 0;

Begin
    For I := TABLESTEP To ENDOFTABLE Do
    Begin
        Cost := I * ONEKILOCOST Div GRAMINKILO;
        If (I Mod 50 = 0) Then
        Begin
            If I < 99 Then
            Begin
                Write(I);
                Write('   gram of cheese - cost: ');
                Write(Cost);
                Writeln('  rubles.');
            End
            Else If (I < 999) And (Cost < 100) Then
            Begin
                Write(I);
                Write('  gram of cheese - cost: ');
                Write(Cost);
                Writeln('  rubles.');
            End
            Else If I < 999 Then
            Begin
                Write(I);
                Write('  gram of cheese - cost: ');
                Write(Cost);
                Writeln(' rubles.');
            End
            Else
            Begin
                Write(I);
                Write(' gram of cheese - cost: ');
                Write(Cost);
                Writeln(' rubles.');
            End;
        End;
    End;
    Readln;

End.
